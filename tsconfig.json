{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["es2020"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2020",
    "types": ["node", "jest"],
    "declaration": true,
    "outDir": "./pkg",
    "rootDir": "./src"
  },
  "include": [
    "src",
    "node_modules/@types/jest/index.d.ts"
  ],
  "exclude": [
    "spec/fixtures"
  ]
}
