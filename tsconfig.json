{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["es2020"],
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "es2020",
    "types": ["node", "vitest/globals"],
    "declaration": true,
    "outDir": "./pkg",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["spec/fixtures"]
}
